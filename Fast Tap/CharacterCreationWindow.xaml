<Window x:Class="Fast_Tap.CharacterCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast_Tap"
        mc:Ignorable="d"
        Title="Создание персонажа" Height="840" Width="630" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Foreground="#FFFBFBFB" FontSize="16" WindowStyle="ToolWindow" IsTabStop="False" ShowInTaskbar="False" Closing="Window_Closing" Topmost="True">
    <Window.Background>
        <SolidColorBrush Color="#FF0E385E"/>
    </Window.Background>
    <Grid Margin="60,56,60,60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="InfoLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,0,0,0" Width="368" Height="72" Foreground="White" FontSize="18" Grid.ColumnSpan="2" HorizontalContentAlignment="Center"/>
        <Label Content="Изображение:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,124,0,0" Width="504" Foreground="#FFFFFDFD" FontSize="18" Grid.ColumnSpan="2" HorizontalContentAlignment="Center"/>
        <ListBox x:Name="HeroImage" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Height="336" Margin="72,163,0,0" VerticalAlignment="Top" Width="368" Padding="5" Grid.ColumnSpan="2">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBoxItem Width="110" Background="#FFC7C7C7" Margin="7,2,5,2">
                <Image x:Name="bearImg" Source="image/bear.png"/>
            </ListBoxItem>
            <ListBoxItem  Width="110" Background="#FFC7C7C7" Margin="0,2,5,2">
                <Image x:Name="wolfImg" Source="image/wolf.png"/>
            </ListBoxItem>
            <ListBoxItem Width="110" Background="#FFC7C7C7"  Margin="0,2,5,2">
                <Image x:Name="volfImg" Source="image/volf.png"/>
            </ListBoxItem>
            <ListBoxItem Width="110" Background="#FFC7C7C7" Margin="7,6,5,0">
                <Image x:Name="lionImg" Source="image/lion.png"/>
            </ListBoxItem>
            <ListBoxItem Width="110" Background="#FFC7C7C7" Margin="0,6,5,0">
                <Image x:Name="pandaImg" Source="image/panda.png"/>
            </ListBoxItem>
            <ListBoxItem Width="110" Background="#FFC7C7C7" Margin="0,6,5,0">
                <Image x:Name="foxImg" Source="image/fox.png"/>
            </ListBoxItem>
        </ListBox>
        <Label Content="Ваше имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,72,0,0" Width="96" Foreground="#FFFFFDFD" Grid.ColumnSpan="2" FontSize="18"/>
        <TextBox x:Name="HeroNameTB" HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" Margin="173,73,0,0" Grid.ColumnSpan="2" BorderBrush="#FFB3ABAB" BorderThickness="2"/>
        <GroupBox Header="Начальный бонус" HorizontalAlignment="Left" Height="113" VerticalAlignment="Top" Width="336" Margin="87,515,0,0" Grid.ColumnSpan="2" FontSize="18">
            <StackPanel Orientation="Vertical">
                <RadioButton x:Name="Money" Content="Деньги" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF9F7F7" FontSize="16" IsChecked="True"/>
                <RadioButton x:Name="Health" Content="Здоровье" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF9F7F7" FontSize="16"/>
                <RadioButton x:Name="Damage" Content="Урон" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF9F7F7" FontSize="16"/>
                <RadioButton x:Name="Protection" Content="Защита" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF9F7F7" FontSize="16"/>
            </StackPanel>
        </GroupBox>
        <Button Content="Coздать" Margin="52,650,41,0" Grid.ColumnSpan="2" FontSize="18" FontWeight="Medium" Click="CreateButton_Click"/>
        <Label x:Name="NameErrorLabel" Content="*Имя не может быть пустым" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,104,0,0" Width="193" Foreground="#FFFF0E0E" Grid.ColumnSpan="2" FontSize="14"/>
    </Grid>
</Window>
